<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox alignment="CENTER" prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.cliente.LoginController">

    <Text text="ChatUDP" textAlignment="CENTER">
        <font>
            <Font size="30.0" />
        </font>
        <VBox.margin>
            <Insets bottom="20.0" />
        </VBox.margin>
    </Text>
   <Label text="Apodo" />

    <TextField fx:id="textFieldApodo" maxHeight="50.0" maxWidth="250.0" minHeight="20.0" minWidth="200.0" onAction="#onActionTextFieldIp" prefHeight="35.0" prefWidth="200.0" text="Pepe">
        <VBox.margin>
            <Insets bottom="10.0" />
        </VBox.margin>
        <font>
            <Font size="20.0" />
        </font>
    </TextField>
    <Label text="Puerto local" />

    <TextField fx:id="textFieldLocalPort" maxHeight="50.0" maxWidth="250.0" minHeight="20.0" minWidth="200.0" onAction="#onActionTextFieldLocalPort" prefHeight="35.0" prefWidth="200.0" text="6010">
        <VBox.margin>
            <Insets bottom="10.0" />
        </VBox.margin>
        <font>
            <Font size="20.0" />
        </font>
    </TextField>
   <Label text="Nombre de usuario" />

    <TextField fx:id="textFieldUsername" maxHeight="50.0" maxWidth="250.0" minHeight="20.0" minWidth="200.0" onAction="#onActionTextFieldusername" prefHeight="35.0" prefWidth="200.0" text="Usuario">
        <VBox.margin>
            <Insets bottom="10.0" />
        </VBox.margin>
        <font>
            <Font size="20.0" />
        </font>
    </TextField>
   <Label fx:id="labelError" layoutX="372.0" layoutY="192.0" />


    <Button fx:id="buttonLogin" maxWidth="150.0" onAction="#onActionButtonLogin" prefHeight="30.0" text="Entrar">
        <font>
            <Font size="15.0" />
        </font>
        <VBox.margin>
            <Insets top="20.0" />
        </VBox.margin></Button>


    <Label fx:id="accessError" alignment="CENTER" contentDisplay="CENTER" maxWidth="350.0" prefHeight="40.0" textAlignment="CENTER" textFill="RED">
        <VBox.margin>
            <Insets top="20.0" />
        </VBox.margin>
        <font>
            <Font size="15.0" />
        </font></Label>

</VBox>
